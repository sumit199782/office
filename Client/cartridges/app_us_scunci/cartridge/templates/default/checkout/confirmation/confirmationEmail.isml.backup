<body>
    <style>
        .address-details{
            display:none;
        }
    </style>
    <div class="template-container">
        <div style="margin:auto; background-color: lightgray;width:50%; min-width:600px;padding-top: 3%;padding-bottom: 3%;">
            <center>    
                <img src="${URLUtils.httpStatic('/image/logo.png')}" alt="scunci">
            </center>
        </div>
        <div>
            <center>    
                <h1>${Resource.msg('msg.placed.order.thank.you', 'confirmation', null)}</h1>
            </center>
        </div>
        <div class="order-details" style="display:flex; justify-content: center; width:50%; min-width:600px; margin:auto;">
            <div class="order-no" style="margin-left: auto; margin-right: 25px;">
                <p class="order-no">
                    <strong>${Resource.msg('label.order.number', 'confirmation', null)}</strong>
                    <iscomment> <br/> </iscomment>
                    <span>${pdict.order.orderNumber}</span>
                </p>
            </div>
            <div class="order-date" style="margin-right: auto; margin-left: 25px;">
                <p class="order-date">
                    <strong>${Resource.msg('label.order.date', 'confirmation', null)}</strong>
                    <iscomment> <br/> </iscomment>
                    <span><isprint value="${pdict.order.creationDate}" formatter="EEE ,dd MMM , yyyy" /></span>
                </p>
            </div>
        </div>

        

        <!--- Payment information --->
        <iscomment> <div>
            <strong>${Resource.msg('label.order.payment.info', 'confirmation', null)}</strong>
            <br/>
            <div>
                <isloop items="${pdict.order.billing.payment.selectedPaymentInstruments}" var="payment">
                    <isif condition="${payment.paymentMethod === 'CREDIT_CARD'}">
                        <div>
                            <span>${Resource.msg('msg.payment.type.credit', 'confirmation', null)}
                                ${payment.type}</span>
                        </div>
                        <div>
                            ${payment.maskedCreditCardNumber}
                        </div>
                        <div>
                            <span>${Resource.msg('msg.card.type.ending', 'confirmation', null)} ${payment.expirationMonth}/${payment.expirationYear}</span>
                        </div>
                    </isif>
                </isloop>
            </div>
        </div> </iscomment>

        <iscomment> <p>
            ${Resource.msgf('label.number.items.in.cart','cart', null, pdict.order.items.totalQuantity)}
            <br/>
            ${pdict.order.totals.subTotal}
        </p> </iscomment>

        <br/>
        
        <isif condition="${pdict.order.shipping.length === 1}">
            <iscomment> <strong>${Resource.msg('label.order.products', 'confirmation', null)}:</strong> <br/> </iscomment>
            <isloop items="${pdict.order.items.items}" var="lineItem">
                <div class="" style="display:flex; justify-content: space-between; width:50%; min-width:600px; background:#f8f9fb; margin:auto;">
                    <div class="product-image">
                        <img src="${lineItem.images.small[0].url}" class="product-image" alt="product inmage" style="width:120px;" />
                    </div>
                    <div class="product-details" style="margin-left:5%; margin-right:5%;" >
                        <p>
                            <iscomment> ${Resource.msg('label.order.product.name', 'confirmation', null)}:  </iscomment>
                            ${lineItem.productName}
                            <br/>
                            <!--- quantity --->
                            ${Resource.msg('field.selectquantity','cart',null)}
                            - <isprint value="${lineItem.quantity}" formatter="##" />
                            <br/>
                            
                            <isif condition="${lineItem.productType === 'bundle'}">
                                <isloop items="${lineItem.bundledProductLineItems}" var="bundledLineItem">
                                    <iscomment> ${Resource.msg('label.order.bundled.item.name', 'confirmation', null)}:  </iscomment>
                                    ${bundledLineItem.productName}
                                        <br/>
                                        <isloop items="${bundledLineItem.variationAttributes}" var="attribute">
                                            <iscomment> ${attribute.displayName}: ${attribute.displayValue} </iscomment>
                                            <br/>
                                        </isloop>
                                </isloop>
                            <iselse/>
                                <isloop items="${lineItem.variationAttributes}" var="attribute">
                                    <iscomment> ${attribute.displayName}: ${attribute.displayValue} </iscomment>
                                    <br/>
                                </isloop>
                            </isif>

                            <isif condition="${lineItem.bonusProductLineItemUUID === 'bonus'}">
                                <isloop items="${lineItem.bonusProducts}" var="bonusProduct" status="loopState">
                                    <isif condition="${loopState.first}">
                                        <br/>
                                        ${Resource.msg('text.lineitem.bonus.msg','cart',null)}
                                    </isif>
                                    ${bonusProduct.productName}
                                    <isloop items="${bonusProduct.variationAttributes}" var="attribute">
                                        <iscomment> ${attribute.displayName}: ${attribute.displayValue} </iscomment>
                                        <br/>
                                    </isloop>

                                    <!--- item price --->
                                    <iscomment> ${Resource.msg('label.each.item.price','cart',null)} -
                                    ${bonusProduct.priceTotal.price}
                                    <br/> </iscomment>

                                    <!--- quantity --->
                                    <iscomment> ${Resource.msg('field.selectquantity','cart',null)}
                                    - <isprint value="${bonusProduct.quantity}" formatter="##" />
                                    <br/> </iscomment>
                                    <isif condition="${loopState.last}">
                                        <br/>
                                    </isif>
                                </isloop>
                            </isif>
                        </p>
                    </div>
                    <div class="price-details" style="margin-left:15%; margin-right:5%">
                        <p style="font-size:30px;">
                            <!--- item price --->
                            <iscomment> ${Resource.msg('label.each.item.price','cart',null)} -
                            ${lineItem.priceTotal.price}
                            <br/> </iscomment>
                            <!--- quantity --->
                            <iscomment> ${Resource.msg('field.selectquantity','cart',null)}
                            - <isprint value="${lineItem.quantity}" formatter="##" />
                            <br/> </iscomment>

                            <!--- line item total price --->
                            <iscomment> ${Resource.msg('label.total.price','cart',null)} </iscomment>
                            ${lineItem.priceTotal.price}
                            <br/>
                        </p>
                    </div>
                </div>
            </isloop>
        </isif>
        <isinclude template="checkout/confirmation/confirmationOrderTotal" />

        <!--- Shipping Address --->
        <div class="address-details" style="display:flex; justify-content: center; width:50%; min-width:600px; background:#f8f9fb; margin:auto;padding-bottom:3%; padding-top:3%;">
            <div class="shipping-address" style="margin:0 auto 0 auto;" >
                <isloop items="${pdict.order.shipping}" var="shippingModel" status="shippingLoop">
                    <isinclude template="checkout/confirmation/shippingTitle"/>
                    <isset name="address" value="${shippingModel.shippingAddress}" scope="page"/>
                    <isinclude template="checkout/addressSummary" />
                    <br/>
                    <iscomment> <p>
                        <strong>${Resource.msg('label.order.shipping.method', 'confirmation', null)}</strong>
                        <br/>
        
                        ${shippingModel.selectedShippingMethod.displayName}
                        <isif condition="${shippingModel.selectedShippingMethod.estimatedArrivalTime}">
                            (${shippingModel.selectedShippingMethod.estimatedArrivalTime})
                        </isif>
                    </p> </iscomment>

                    <isif condition="${shippingModel.isGift}">
                        <p>
                            <strong>
                                ${Resource.msg('heading.gift.message', 'checkout', null)}
                            </strong>
                            ${shippingModel.giftMessage}
                        </p>
                    </isif>

                    <isif condition="${pdict.order.shipping.length > 1}">
                        <strong>${Resource.msg('label.order.products', 'confirmation', null)}:</strong> <br/>
                        <isloop items="${shippingModel.productLineItems.items}" var="lineItem">
                            <p>
                                ${Resource.msg('label.order.product.name', 'confirmation', null)}: ${lineItem.productName}
                                <br/>

                                <isif condition="${lineItem.productType === 'bundle'}">
                                    <isloop items="${lineItem.bundledProductLineItems}" var="bundledLineItem">
                                        ${Resource.msg('label.order.bundled.item.name', 'confirmation', null)}: ${bundledLineItem.productName}
                                            <br/>
                                            <isloop items="${bundledLineItem.variationAttributes}" var="attribute">
                                                ${attribute.displayName}: ${attribute.displayValue}
                                                <br/>
                                            </isloop>
                                    </isloop>
                                <iselse/>
                                    <isloop items="${lineItem.variationAttributes}" var="attribute">
                                        ${attribute.displayName}: ${attribute.displayValue}
                                        <br/>
                                    </isloop>
                                </isif>

                                <!--- item price --->
                                ${Resource.msg('label.each.item.price','cart',null)} -
                                ${lineItem.priceTotal.price}
                                <br/>
                                <!--- quantity --->
                                ${Resource.msg('field.selectquantity','cart',null)}
                                - <isprint value="${lineItem.quantity}" formatter="##" />
                                <br/>

                                <!--- line item total price --->
                                ${Resource.msg('label.total.price','cart',null)}
                                - ${lineItem.priceTotal.price}
                                <br/>
                            </p>
                        </isloop>
                    </isif>
                </isloop>
            </div>
        
            <iscomment> <p>${pdict.order.totals.totalShippingCost}</p> </iscomment>
            <div class="billing-address" style="margin:0 auto 0 auto;">
                <!--- Billing Address --->
                <strong>${Resource.msg('label.order.billing.address', 'confirmation', null)}</strong>
                <br/>
                <isset name="address" value="${pdict.order.billing.billingAddress.address}" scope="page"/>
                <isinclude template="checkout/addressSummary" />
            </div>
            <div class="payment-info" style="margin:0 auto 0 auto;">
                <!--- Payment information --->
                <div>
                    <strong>${Resource.msg('label.order.payment.info', 'confirmation', null)}</strong>
                    <br/>
                    <div>
                        <isloop items="${pdict.order.billing.payment.selectedPaymentInstruments}" var="payment">
                            <isif condition="${payment.paymentMethod === 'CREDIT_CARD'}">
                                <div>
                                    <span>${Resource.msg('msg.payment.type.credit', 'confirmation', null)}
                                        ${payment.type}</span>
                                </div>
                                <div>
                                    ${payment.maskedCreditCardNumber}
                                </div>
                                <div>
                                    <span>${Resource.msg('msg.card.type.ending', 'confirmation', null)} ${payment.expirationMonth}/${payment.expirationYear}</span>
                                </div>
                            </isif>
                        </isloop>
                    </div>
                </div> 
                
            </div>
        </div>
        

        <div style="width:50%; min-width:600px; margin:auto; background-color: lightgray;padding-top: 3%;padding-bottom: 3%; height:auto; display:flex;" >
            <div style="margin-left: 5%;text-align: left;width: 40%;float: left;">
                <img src="${URLUtils.httpStatic('/image/logo.png')}" width="30%" alt="scunci">
                <p>© 2021 Conair Corporation</p>
            </div>
            <div style="margin-right: 5%;text-align: right;width: 50%; float: right;">
                <p><a style="color:black" href="${URLUtils.https('ContactForm-Show')}">CONTACT</a></p>
                <p><a style="color:black" href="${URLUtils.https('Page-Show','cid','scunci-faq')}">FAQs</a></p>
                <p><a style="color:black" href="${URLUtils.https('Page-Show','cid','scunci-privacy')}">PRIVACY POLICY</a></p>
                <h3>CONNECT</h3>
                <p><a style="color:black" href="https://www.facebook.com/scuncihair/">FACEBOOK</a></p>
                <p><a style="color:black" href="https://www.instagram.com/scunci">INSTAGRAM</a></p>
            </div>
        </div>
    </div>
</body>
